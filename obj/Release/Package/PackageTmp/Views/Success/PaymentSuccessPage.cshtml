@model BlockChainPayment.Models.AdvantageBO.OrderEntity
@{
    ViewBag.Title = "PaymentSuccessPage";
}
<style>
    h1 {
        color: #88B04B;
        font-family: "Nunito Sans", "Helvetica Neue", sans-serif;
        font-weight: 400;
        font-size: 40px;
        margin-bottom: 10px;
    }

    footer p {
        color: #FFF;
    }

    p {
        color: #404F5E;
        font-family: "Nunito Sans", "Helvetica Neue", sans-serif;
        font-size: 20px;
        margin: 0;
    }

    i {
        color: white;
        font-size: 33px;
        line-height: 31px;
        margin-left: -8px;
        position: absolute;
        top: 15px;
        left: 21px;
        font-weight: 800;
    }

    .checkimg {
        width: 7%
    }

    @@media (max-width:767px) {
        p {
            font-size: 16px;
        }
    }
</style>
<div class="sucess-page text-center">
    <div class="container pt-2">

        <div class="row">
            <div class="col-12">
                <div class="success-head text-center my-3">
                    <div style="border-radius:200px; height:60px; width:60px; background:forestgreen; margin:0px auto 5%;display:inline-block;position:relative">
                        <i class="checkmark">✓</i>
                    </div>
                    <div class="pl-2" style="display:inline-block">
                        <h1>Payment Successfull !</h1>
                        <p>Thank You ! Your Payment of <span>$@Model.TotalCost</span> has been received.</p>
                        <p>Order Id: <span class="orderid">@Model.OrderId</span> | Transition Id: <span class="transid">@Model.PaidTransactionId</span></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="pay-details my-3 text-center">
            <p class="text-bold mb-2 " style="font-weight: 700;">Payment Details</p>

            <div class="row my-2">
                <div class="col-6">
                    <p>Total Amount : <span class="totalAmt">$@Model.TotalCost</span></p>
                </div>
                <div class="col-6">
                    <p>Paid via @Model.PaidTransactionVia Account Balance : <span class="CBal">$@Model.TotalCost</span></p>
                </div>
            </div>
        </div>

        <a href="@Url.Action("Index","Home")" class="btn btn-primary px-3">OK</a>

    </div>
</div>
<style>
    nav.second-nav {
        display: none !important;
    }
</style>

